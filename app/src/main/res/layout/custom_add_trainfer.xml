<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/background_edittext_troke"
            android:orientation="horizontal">

            <TextView
                android:textSize="17dp"
                android:textColor="#009DAD"
                android:textStyle="bold"
                android:padding="10dp"
                android:gravity="center"
                android:text="Trainfer People"
                android:id="@+id/trainfer_people"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:gravity="center"
                android:text="[DD/MM/YYYY HH:MM]"
                android:id="@+id/trainfer_time"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />
        </LinearLayout>
        <LinearLayout
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:text="content of this "
                android:id="@+id/content_trainfer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <com.newsaigonsoft.neoegov.CustomViewListExpand.NonScrollListView
            android:id="@+id/file_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        </com.newsaigonsoft.neoegov.CustomViewListExpand.NonScrollListView>
    </LinearLayout>


</LinearLayout>