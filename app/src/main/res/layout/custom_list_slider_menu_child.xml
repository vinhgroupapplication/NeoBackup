<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/slider_child"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
   android:background="#ffffff"
    android:orientation="horizontal">
    android:background="@drawable/select_recycle"

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:padding="7dp">

            <ImageView
                android:id="@+id/icon_menu_child"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:src="@drawable/user_avatar"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/menu_name_child"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/icon_menu_child"
                android:text="android"
                android:textColor="#000000"
                android:textSize="17dp"
                android:textStyle="bold" />

            <TextView
                android:singleLine="true"
                android:id="@+id/number_lable_count"
                android:layout_width="wrap_content"
                android:paddingRight="5dp"
                android:paddingLeft="5dp"
                android:layout_height="25dp"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/menu_name_child"
                android:background="@drawable/backgroud_textview_lable_count"
                android:gravity="center"
                android:text="1"
                android:textColor="#ffffff"
                android:textStyle="bold" />

            <!--<LinearLayout
                android:layout_width="30dp"
                android:layout_height="wrap_content"></LinearLayout>-->

        </LinearLayout>
    </LinearLayout>

</LinearLayout>