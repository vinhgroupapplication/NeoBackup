<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="15dp">

       <!-- <TextView
            android:id="@+id/schedule_start_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_textview"
            android:gravity="center"
            android:text="17h:30"
            android:textColor="@android:color/white"
            android:textSize="20dp" />-->

        <LinearLayout
            android:paddingLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

                <TextView
                    android:id="@+id/schedule_start_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:lineSpacingExtra="7dp"
                    android:text="07 giờ 00"
                    android:textColor="#E24444"
                    android:textSize="15dp"
                    android:textStyle="bold" />

            <TextView
                android:id="@+id/schedule_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:lineSpacingExtra="5dp"
                android:text="Test 2 123"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/schedule_charman"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:lineSpacingExtra="7dp"
                android:text="Người chủ trì:"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/schedule_placeName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:lineSpacingExtra="7dp"
                android:text="Địa điểm:"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/schedule_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@drawable/cornor_button_blue"
                android:lineSpacingExtra="7dp"
                android:padding="5dp"
                android:text="Đã họp"
                android:textColor="#ffffff"
                android:textStyle="bold" />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>