<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:id="@+id/parent_custom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="17dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">



        </RelativeLayout>

        <ImageView
            android:id="@+id/icon_check_document"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/check_icon"
            android:visibility="gone" />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/number_coming"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Số Đến"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/_11sdp" />

                <TextView
                    android:id="@+id/day_document"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:gravity="right"
                    android:text="dd/mm/yyyy"
                    android:textSize="@dimen/_9sdp" />

            </RelativeLayout>
        </LinearLayout>


        <TextView
            android:id="@+id/title_document"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="Số Đến"
            android:textColor="@android:color/black"
            android:textSize="@dimen/_11sdp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/title_document"
            android:textSize="17dp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/process_position"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/icon_check_document"
            android:text="Số Đến"
            android:textColor="@android:color/black"
            android:textSize="@dimen/_11sdp" />

        <TextView
            android:id="@+id/sumary_document"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="V/v"
            android:textColor="@color/text_gray"
            android:textSize="@dimen/_11sdp" />
    </LinearLayout>
</RelativeLayout>