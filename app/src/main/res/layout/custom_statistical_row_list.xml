<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:animateLayoutChanges="true"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/top_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/statistical_department"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:lineSpacingExtra="7dp"
                        android:text="Ban công nghệ thông tin"
                        android:textColor="@color/text_blue"
                        android:textSize="@dimen/_13sdp" />

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:lineSpacingExtra="7dp"
                                android:padding="2dp"
                                android:text="Tổng"
                                android:textColor="@color/text_gray" />

                            <TextView
                                android:id="@+id/statistical_total_row"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="bottom"
                                android:lineSpacingExtra="7dp"
                                android:padding="2dp"
                                android:text="137"
                                android:textColor="@color/text_blue" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:lineSpacingExtra="7dp"
                                android:padding="2dp"
                                android:text="văn bản - Tỷ lệ đúng hạn"
                                android:textColor="@color/text_gray" />

                            <TextView
                                android:id="@+id/percent"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/_1sdp"
                                android:background="@drawable/button_green_conor"
                                android:paddingLeft="@dimen/_7sdp"
                                android:paddingRight="@dimen/_7sdp"
                                android:text="96%"
                                android:textColor="@android:color/white" />


                        </LinearLayout>

                        <TextView
                            android:id="@+id/statistical_late_row"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:gravity="right|bottom"
                            android:lineSpacingExtra="7dp"
                            android:text="0"
                            android:textColor="#DD0000"
                            android:textSize="30dp"
                            android:textStyle="bold"
                            android:visibility="gone" />

                    </RelativeLayout>


                </LinearLayout>

                <ImageView
                    android:id="@+id/button_arrow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/right_arrow_x1" />

            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/detail_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/stroke_blank_rectangle_transparent"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:paddingBottom="@dimen/_1sdp"
                    android:paddingTop="@dimen/_1sdp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:paddingBottom="@dimen/_5sdp"
                        android:paddingTop="@dimen/_5sdp"
                        android:text="Đã xử lý"
                        android:textColor="@android:color/black" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/stroke_blank_rectangle_transparent"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:paddingBottom="@dimen/_1sdp"
                    android:paddingTop="@dimen/_1sdp">

                    <TextView
                        android:layout_width="match_parent"

                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:paddingBottom="@dimen/_5sdp"
                        android:paddingTop="@dimen/_5sdp"
                        android:text="Chưa xử lý"
                        android:textColor="@android:color/black" />


                </LinearLayout>


            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <LinearLayout
                    android:id="@+id/content_task"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/stroke_blank_rectangle_transparent"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:paddingBottom="@dimen/_5sdp"
                        android:paddingTop="@dimen/_5sdp">

                        <TextView
                            android:id="@+id/textView5"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="Tổng" />


                        <com.loopeer.shadow.ShadowView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:elevation="@dimen/_5sdp"
                            android:foreground="?attr/selectableItemBackground"
                            android:paddingBottom="@dimen/_2sdp"
                            android:paddingLeft="@dimen/_10sdp"
                            android:paddingRight="@dimen/_10sdp"
                            android:paddingTop="@dimen/_2sdp"
                            app:backgroundColor="#ffffff"
                            app:cornerRadius="@dimen/_11sdp"
                            app:foregroundColor="@color/colorAccent"
                            app:shadowColor="#0090ff"
                            app:shadowMargin="@dimen/_5sdp"
                            app:shadowRadius="@dimen/_3sdp">

                            <TextView
                                android:id="@+id/total_processed"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="0dp"
                                android:ellipsize="end"
                                android:gravity="center"
                                android:lines="1"
                                android:singleLine="true"
                                android:text="1523"
                                android:textColor="#0090ff"
                                android:textSize="@dimen/_14sdp" />
                        </com.loopeer.shadow.ShadowView>
                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/stroke_blank_rectangle_transparent"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:paddingBottom="@dimen/_5sdp"
                        android:paddingTop="@dimen/_5sdp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="Trễ hạn" />

                        <com.loopeer.shadow.ShadowView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:elevation="@dimen/_5sdp"
                            android:foreground="?attr/selectableItemBackground"
                            android:paddingBottom="@dimen/_2sdp"
                            android:paddingLeft="@dimen/_10sdp"
                            android:paddingRight="@dimen/_10sdp"
                            android:paddingTop="@dimen/_2sdp"
                            app:backgroundColor="#ffffff"
                            app:cornerRadius="@dimen/_11sdp"
                            app:foregroundColor="@color/colorAccent"
                            app:shadowColor="#FE6E4C"
                            app:shadowMargin="@dimen/_5sdp"
                            app:shadowRadius="@dimen/_3sdp">

                            <TextView
                                android:id="@+id/late"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="0dp"
                                android:ellipsize="end"
                                android:gravity="center"
                                android:lines="1"
                                android:singleLine="true"
                                android:text="52"
                                android:textColor="#FE6E4C"
                                android:textSize="@dimen/_14sdp" />
                        </com.loopeer.shadow.ShadowView>


                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/stroke_blank_rectangle_transparent"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:paddingBottom="@dimen/_5sdp"
                        android:paddingTop="@dimen/_5sdp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="Tổng" />


                        <com.loopeer.shadow.ShadowView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:elevation="@dimen/_5sdp"
                            android:foreground="?attr/selectableItemBackground"
                            android:paddingBottom="@dimen/_2sdp"
                            android:paddingLeft="@dimen/_10sdp"
                            android:paddingRight="@dimen/_10sdp"
                            android:paddingTop="@dimen/_2sdp"
                            app:backgroundColor="#ffffff"
                            app:cornerRadius="@dimen/_11sdp"
                            app:foregroundColor="@color/colorAccent"
                            app:shadowColor="#0090ff"
                            app:shadowMargin="@dimen/_5sdp"
                            app:shadowRadius="@dimen/_3sdp">

                            <TextView
                                android:id="@+id/total_out_of_date"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="0dp"
                                android:ellipsize="end"
                                android:gravity="center"
                                android:lines="1"
                                android:singleLine="true"
                                android:text="205"
                                android:textColor="#0090ff"
                                android:textSize="@dimen/_14sdp" />
                        </com.loopeer.shadow.ShadowView>


                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/stroke_blank_rectangle_transparent"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:paddingBottom="@dimen/_5sdp"
                        android:paddingTop="@dimen/_5sdp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="Quá hạn" />


                        <com.loopeer.shadow.ShadowView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:elevation="@dimen/_5sdp"
                            android:foreground="?attr/selectableItemBackground"
                            android:paddingBottom="@dimen/_2sdp"
                            android:paddingLeft="@dimen/_10sdp"
                            android:paddingRight="@dimen/_10sdp"
                            android:paddingTop="@dimen/_2sdp"
                            app:backgroundColor="#ffffff"
                            app:cornerRadius="@dimen/_11sdp"
                            app:foregroundColor="@color/colorAccent"
                            app:shadowColor="#FFB239"
                            app:shadowMargin="@dimen/_5sdp"
                            app:shadowRadius="@dimen/_3sdp">

                            <TextView
                                android:id="@+id/out_of_date"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="0dp"
                                android:ellipsize="end"
                                android:gravity="center"
                                android:lines="1"
                                android:singleLine="true"
                                android:text="14"
                                android:textColor="#FFB239"
                                android:textSize="@dimen/_14sdp" />
                        </com.loopeer.shadow.ShadowView>
                    </LinearLayout>


                </LinearLayout>


            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>