<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/_13sdp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        <LinearLayout

            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/task_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text="Android" />
            </RelativeLayout>

            <TextView
                android:visibility="gone"
                android:id="@+id/documentType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Android" />

            <LinearLayout
                android:padding="@dimen/_1sdp"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/title_first_line"
                    android:textSize="@dimen/_11sdp"
                    android:textColor="@android:color/black"
                    android:text="Số đến: "
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:textColor="@android:color/black"
                    android:id="@+id/publishCategory"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Số đến" />
            </LinearLayout>


            <TextView
                android:visibility="gone"
                android:id="@+id/briefContentFull"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Android" />

            <TextView
                android:visibility="gone"
                android:id="@+id/docNumberFull"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Android" />

            <TextView
                android:visibility="gone"
                android:id="@+id/numberOfSymbol"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Android" />

            <TextView
                android:visibility="gone"
                android:id="@+id/briefContent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Android" />

            <TextView
                android:ellipsize="end"
                android:maxLines="1"
                android:padding="@dimen/_1sdp"
                android:textSize="@dimen/_11sdp"
                android:id="@+id/publishDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Android" />

            <LinearLayout
                android:padding="@dimen/_1sdp"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:textSize="@dimen/_11sdp"
                    android:text="Người liên kết: "
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:textSize="@dimen/_11sdp"
                    android:id="@+id/connecter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Android" />
            </LinearLayout>


        </LinearLayout>

            <ImageView
                android:visibility="gone"
                android:id="@+id/unlink"
                android:layout_marginRight="@dimen/_10sdp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:src="@drawable/unlink_x1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </RelativeLayout>





    </LinearLayout>

    <com.newsaigonsoft.neoegov.CustomViewListExpand.NonScrollListView
        android:id="@+id/list_attach_doc_connect"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></com.newsaigonsoft.neoegov.CustomViewListExpand.NonScrollListView>

</LinearLayout>