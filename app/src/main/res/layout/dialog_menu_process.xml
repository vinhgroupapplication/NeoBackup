<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:paddingBottom="@dimen/_10sdp"
        android:paddingTop="@dimen/_10sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#34DA8E"
        android:gravity="center_vertical">

        <TextView
            android:textSize="@dimen/_15sdp"
            android:textColor="@android:color/white"
            android:paddingLeft="@dimen/_10sdp"
            android:id="@+id/title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Chọn cách thức xử lý" />


        <ImageView
            android:id="@+id/img_cancel"
            android:layout_marginRight="@dimen/_7sdp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_2sdp"
            android:background="@drawable/close_white_x1">

        </ImageView>

    </LinearLayout>


    <LinearLayout
        android:id="@+id/top_background"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bgpopup"
        android:orientation="horizontal" />


    <ListView
        android:id="@+id/lv_menu_details"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/top_background"></ListView>


</LinearLayout>