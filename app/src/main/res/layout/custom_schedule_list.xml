<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingLeft="@dimen/_15sdp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="10dp"
            android:layout_height="match_parent">


            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:background="@color/gray" />

            <TextView
                android:id="@+id/dot_"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:background="@drawable/schedule_rectangle_back_blue" />

        </RelativeLayout>


        <LinearLayout
            android:paddingBottom="@dimen/_10sdp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="@dimen/_10sdp"
            android:paddingTop="@dimen/_10sdp">

            <!--         android:background="@drawable/rounded_textview"-->

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/schedule_start_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="17h:30"
                    android:textColor="#637F95"
                    android:textSize="@dimen/_18sdp" />


                <TextView
                    android:id="@+id/schedule_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:background="@drawable/schedule_rectangle_back_blue"
                    android:gravity="center"
                    android:lineSpacingExtra="7dp"
                    android:text="Đã họp"
                    android:textColor="#ffffff"
                    android:textSize="@dimen/_11sdp"
                    android:textStyle="bold" />
            </LinearLayout>

            <TextView
                android:id="@+id/schedule_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:lineSpacingExtra="5dp"
                android:text="Test 2 123"
                android:textColor="#000000"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/schedule_charman"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:lineSpacingExtra="7dp"
                android:text="Người chủ trì:"
                android:textColor="#000000"
                android:textSize="@dimen/_10sdp" />

            <TextView
                android:id="@+id/schedule_placeName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:lineSpacingExtra="7dp"
                android:text="Địa điểm:"
                android:textColor="#000000"
                android:textSize="@dimen/_10sdp" />


        </LinearLayout>

    </LinearLayout>
</LinearLayout>